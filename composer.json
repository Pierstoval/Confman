{
    "name": "pierstoval/confman",
    "description": "CLI tool to manage multiple projects on the same machine",
    "type": "project",
    "license": "AGPL-3.0",
    "authors": [
        {
            "name": "Alex \"Pierstoval\" Rock",
            "email": "pierstoval@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Pierstoval\\Confman\\": "src/"
        }
    },
    "require": {
        "php": "^8.4",
        "symfony/console": "^8.0",
        "symfony/serializer": "^8.0",
        "symfony/property-access": "^8.0",
        "phpdocumentor/reflection-docblock": "^5.6",
        "symfony/process": "^8.0"
    },
    "scripts": {
        "post-install-cmd": [
            "[ -f .git/hooks/commit-msg ] || ln -s $(pwd)/hooks/commit-msg .git/hooks/commit-msg",
            "[ -f .git/hooks/post-commit ] || ln -s $(pwd)/hooks/post-commit .git/hooks/post-commit"
        ]
    },
    "config": {
        "platform": {
            "php": "8.4"
        }
    },
    "require-dev": {
        "symfony/var-dumper": "^8.0"
    }
}
